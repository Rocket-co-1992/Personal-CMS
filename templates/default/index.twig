
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ config.app_name }}</title>
    <link rel="stylesheet" href="{{ template_path }}/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body data-bs-spy="scroll" data-bs-target="#navbar">

    <!-- Navigation -->
    <nav id="navbar" class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">{{ config.app_name }}</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    {% for section in sections %}
                        <li class="nav-item">
                            <a class="nav-link" href="#section-{{ section.id }}">{{ section.name }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </nav>

    <!-- Sections -->
    {% for section in sections %}
        <section id="section-{{ section.id }}" class="py-5 section-{{ section.type }}">
            <div class="container">
                <h2 class="text-center mb-4">{{ section.name }}</h2>
                
                {% if section.type == 'slider' %}
                    <!-- Slider Section -->
                    <div id="mainCarousel" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-indicators">
                            {% for item in section.content %}
                                <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="{{ loop.index0 }}" {{ loop.first ? 'class="active"' }} aria-current="true" aria-label="Slide {{ loop.index }}"></button>
                            {% endfor %}
                        </div>
                        <div class="carousel-inner">
                            {% for item in section.content %}
                                <div class="carousel-item {{ loop.first ? 'active' }}">
                                    <img src="{{ base_url }}/public/uploads/{{ item.image }}" class="d-block w-100" alt="{{ item.title }}">
                                    <div class="carousel-caption d-none d-md-block">
                                        <h3>{{ item.title }}</h3>
                                        <p>{{ item.subtitle }}</p>
                                        {% if item.link %}
                                            <a href="{{ item.link }}" class="btn btn-primary">Learn More</a>
                                        {% endif %}
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                
                {% elseif section.type == 'news' %}
                    <!-- News Section -->
                    <div class="row">
                        {% for item in section.content %}
                            <div class="col-lg-4 col-md-6 mb-4">
                                <div class="card h-100">
                                    {% if item.image %}
                                        <img src="{{ base_url }}/public/uploads/{{ item.image }}" class="card-img-top" alt="{{ item.title }}">
                                    {% endif %}
                                    <div class="card-body">
                                        <h5 class="card-title">{{ item.title }}</h5>
                                        <p class="card-text">{{ item.content|striptags|slice(0, 100) }}...</p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <small class="text-muted">{{ item.date|date("M d, Y") }}</small>
                                            <small class="text-muted">By {{ item.author }}</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                
                {% elseif section.type == 'team' %}
                    <!-- Team Section -->
                    <div class="row">
                        {% for member in section.content %}
                            <div class="col-lg-3 col-md-6 mb-4">
                                <div class="card h-100 text-center">
                                    {% if member.image %}
                                        <img src="{{ base_url }}/public/uploads/{{ member.image }}" class="card-img-top" alt="{{ member.name }}">
                                    {% endif %}
                                    <div class="card-body">
                                        <h5 class="card-title">{{ member.name }}</h5>
                                        <p class="text-muted">{{ member.position }}</p>
                                        <p class="card-text">{{ member.bio|striptags|slice(0, 100) }}</p>
                                        
                                        {% if member.social %}
                                            <div class="social-icons">
                                                {% for platform, url in member.social %}
                                                    <a href="{{ url }}" class="me-2"><i class="fab fa-{{ platform }}"></i></a>
                                                {% endfor %}
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                
                {% elseif section.type == 'gallery' %}
                    <!-- Gallery Section -->
                    <div class="row gallery-container">
                        {% for item in section.content %}
                            <div class="col-lg-4 col-md-6 mb-4">
                                <div class="gallery-item">
                                    <a href="{{ base_url }}/public/uploads/{{ item.image }}" data-lightbox="gallery" data-title="{{ item.title }}">
                                        <img src="{{ base_url }}/public/uploads/{{ item.image }}" class="img-fluid" alt="{{ item.title }}">
                                        <div class="gallery-overlay">
                                            <div class="gallery-info">
                                                <h4>{{ item.title }}</h4>
                                                <p>{{ item.description }}</p>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                
                {% elseif section.type == 'contacts' %}
                    <!-- Contact Section -->
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="contact-info">
                                {% if section.content.address %}
                                    <div class="mb-3">
                                        <h5><i class="fas fa-map-marker-alt me-2"></i> Address</h5>
                                        <p>{{ section.content.address }}</p>
                                    </div>
                                {% endif %}
                                
                                {% if section.content.phone %}
                                    <div class="mb-3">
                                        <h5><i class="fas fa-phone me-2"></i> Phone</h5>
                                        <p>{{ section.content.phone }}</p>
                                    </div>
                                {% endif %}
                                
                                {% if section.content.email %}
                                    <div class="mb-3">
                                        <h5><i class="fas fa-envelope me-2"></i> Email</h5>
                                        <p>{{ section.content.email }}</p>
                                    </div>
                                {% endif %}
                            </div>
                            
                            {% if section.content.map_embed %}
                                <div class="map-container mt-4">
                                    {{ section.content.map_embed|raw }}
                                </div>
                            {% endif %}
                        </div>
                        
                        <div class="col-lg-6">
                            <form id="contact-form" method="post" action="{{ base_url }}/contact">
                                <div class="mb-3">
                                    <label for="name" class="form-label">Your Name</label>
                                    <input type="text" class="form-control" id="name" name="name" required>
                                </div>
                                
                                <div class="mb-3">
                                    <label for="email" class="form-label">Your Email</label>
                                    <input type="email" class="form-control" id="email" name="email" required>
                                </div>
                                
                                <div class="mb-3">
                                    <label for="subject" class="form-label">Subject</label>
                                    <input type="text" class="form-control" id="subject" name="subject">
                                </div>
                                
                                <div class="mb-3">
                                    <label for="message" class="form-label">Message</label>
                                    <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                                </div>
                                
                                <button type="submit" class="btn btn-primary">Send Message</button>
                            </form>
                        </div>
                    </div>
                {% endif %}
            </div>
        </section>
    {% endfor %}

    <!-- Footer -->
    <footer class="bg-dark text-white py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>{{ config.app_name }}</h5>
                    <p>A modern one-page CMS with multiple sections and plugin support.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p>&copy; {{ "now"|date("Y") }} {{ config.app_name }}. All Rights Reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.3/js/lightbox.min.js"></script>
    <script src="{{ template_path }}/js/main.js"></script>
</body>
</html>