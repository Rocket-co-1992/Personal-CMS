{% extends 'base.html.twig' %}

{% block content %}
<section id="shop">
    <h2>Shop</h2>
    <ul>
        {% for product in products %}
            <li>
                <img src="{{ product.image }}" alt="{{ product.name }}">
                <h3>{{ product.name }}</h3>
                <p>{{ product.description }}</p>
                <p>Price: ${{ product.price }}</p>
                <button>Add to Cart</button>
            </li>
        {% endfor %}
    </ul>
</section>
{% endblock %}
